<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>High-Tech - {% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css')}}">
        {% block stylesheets %}
        
        {% endblock %}
    </head>
    <body>


        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('Accueil')}}">High-Tech</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                <a class="nav-link active" href="{{ path('Accueil')}}">Accueil
                </a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">A propos</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    {% if app.user %}
                        <div class="mb-3">
                            {{ app.user.username }}
                            <a class="nav-link active" href="{{ path('app_logout') }}">DÃ©connexion</a>
                        </div>
                    {% else %}
                        <div class="mb-3">
                            <a class="nav-link active" href="{{ path('app_login') }}">Connexion</a>
                        </div>
                    {% endif %}
                </li>
            </ul>
            </div>
        </div>
        </nav>




        <div class="container mt-5"> 
            <div class="row"> 
                <div class="col">    
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <script src="js/jquery.min.js"></script>
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        {% block javascripts %} {% endblock %}
    </body>
</html>
