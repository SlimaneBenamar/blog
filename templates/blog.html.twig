{% extends 'base.html.twig'%}

{% block title %}Mon Blog{% endblock %}

{% block body %}


    {#- container -#}
    <div class="container">
        <div class="jumbotron mt-3">
            <h1 class="display-3 text-center">Bienvenue sur Mon Blog</h1>
            <p class="lead">Blog High-Tech, découvrez notre sélections !</p>
            <hr class="my-4">
            <p>Vous êtes un développeur, Passionné par le monde de l'informatique ?</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/article" role="button">Voir nos articles</a>
            </p>
        </div>

        <h2 class="h1 mt-3 mb-4">Nos articles</h2>


            <div class="row">
                {% for article in articles %}
                <div class="col-md-4">
                    <div class="card border-info mb-3">
                        {% if article.filename %}
                            <img src="/images/articles/{{ article.filename }}" alt="card-img-top" style="width: auto; height: auto;">
                        {% endif %}


                        <div class="card-body">
                            <h4 class="card-title">
                                    {{ article.titre }}
                            </h4>
                            <p class="card-text">
                                    {{ article.contenu|u.truncate(100, '...') }}
                            </p>
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-info">En savoir plus !</a>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
    </div>
{% endblock %}